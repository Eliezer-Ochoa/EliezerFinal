<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#296C2C"
    tools:context=".Registro">

    <EditText
        android:id="@+id/editingresarcódigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#27682A"
        android:ems="10"
        android:hint="Ingresar Código"
        android:inputType="textPersonName"
        android:textColor="#296C2C"
        android:textColorHighlight="#296C2C"
        android:textColorLink="#296C2C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pfBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="#131B53"
        android:text="Buscar"
        android:textColor="#296C2C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textnombre"
        android:layout_width="328dp"
        android:layout_height="51dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#27682A"
        android:text="Nombre"
        android:textColor="#27682A"
        android:textColorHighlight="#27682A"
        android:textColorLink="#27682A"
        app:layout_constraintBottom_toTopOf="@+id/textmarca"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.373"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textmarca"
        android:layout_width="332dp"
        android:layout_height="55dp"
        android:backgroundTint="#27682A"
        android:text="Marca"
        android:textColor="#27682A"
        android:textColorHighlight="#27682A"
        android:textColorLink="#27682A"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="174dp" />

</androidx.constraintlayout.widget.ConstraintLayout>