<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#434F95"
    tools:context=".Registro">

    <TextView
        android:id="@+id/textprecio"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="8dp"
        android:foregroundTint="#27682A"
        android:onClick="lanzarclima"
        android:text="Precio"
        android:textColor="#C8C828"
        android:textColorHighlight="#27682A"
        android:textColorLink="#050505"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textestado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editingresarcódigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#27682A"
        android:ems="10"
        android:hint="Ingresar Código"
        android:inputType="textPersonName"
        android:textColor="#C8C828"
        android:textColorHighlight="#296C2C"
        android:textColorLink="#050505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pfBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="#131B53"
        android:text="Buscar"
        android:textColor="#296C2C"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textnombre"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#27682A"
        android:text="Nombre"
        android:textColor="#C8C828"
        android:textColorHighlight="#27682A"
        android:textColorLink="#050505"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textmarca"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textmarca"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#27682A"
        android:text="Marca"
        android:textColor="#C8C828"
        android:textColorHighlight="#27682A"
        android:textColorLink="#050505"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textmodelo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textmodelo"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="8dp"
        android:foregroundTint="#27682A"
        android:text="Modelo"
        android:textColor="#C8C828"
        android:textColorHighlight="#27682A"
        android:textColorLink="#050505"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textserie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textserie"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#27682A"
        android:text="Serie"
        android:textColor="#C8C828"
        android:textColorHighlight="#27682A"
        android:textColorLink="#050505"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textprecio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textestado"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#27682A"
        android:text="Estado"
        android:textColor="#C8C828"
        android:textColorHighlight="#27682A"
        android:textColorLink="#050505"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textfechacompra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textfechacompra"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#27682A"
        android:text="Fecha Compra"
        android:textColor="#C8C828"
        android:textColorHighlight="#27682A"
        android:textColorLink="#050505"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textcantidad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textcantidad"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="8dp"
        android:text="Cantidad"
        android:textColor="#C8C828"
        android:textColorLink="#050505"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/etClima"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/etClima"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#131B53"
        android:onClick="IrClima"
        android:text="Clima"
        android:textColor="#296C2C"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="139dp"
        android:layout_height="119dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textnombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>